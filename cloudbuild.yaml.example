# Example Cloud Build configuration for Boomi MCP Server
# Copy this to cloudbuild.yaml and configure with your values
# NOTE: cloudbuild.yaml is in .gitignore - do not commit it with secrets!

steps:
  # Build the container image with --no-cache to force fresh build
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'build'
      - '--no-cache'
      - '-t'
      - 'us-central1-docker.pkg.dev/$PROJECT_ID/cloud-run-source-deploy/boomi-mcp-server:latest'
      - '-t'
      - 'us-central1-docker.pkg.dev/$PROJECT_ID/cloud-run-source-deploy/boomi-mcp-server:$BUILD_ID'
      - '.'

  # Push the container image to Artifact Registry
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'push'
      - 'us-central1-docker.pkg.dev/$PROJECT_ID/cloud-run-source-deploy/boomi-mcp-server:latest'

  # Deploy container image to Cloud Run
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'deploy'
      - 'boomi-mcp-server'
      - '--image'
      - 'us-central1-docker.pkg.dev/$PROJECT_ID/cloud-run-source-deploy/boomi-mcp-server:latest'
      - '--region'
      - 'us-central1'
      - '--platform'
      - 'managed'
      - '--allow-unauthenticated'
      - '--port'
      - '8080'
      - '--timeout'
      - '300'
      - '--update-env-vars'
      - 'OIDC_BASE_URL=YOUR_SERVICE_URL,OIDC_CLIENT_ID=YOUR_CLIENT_ID,OIDC_CLIENT_SECRET=YOUR_CLIENT_SECRET'
      # Add more environment variables as needed
      # For SQLite backend (default):
      # No additional env vars needed
      # For GCP Secret Manager backend:
      # Add: SECRETS_BACKEND=gcp,GCP_PROJECT_ID=your-project-id

images:
  - 'us-central1-docker.pkg.dev/$PROJECT_ID/cloud-run-source-deploy/boomi-mcp-server:latest'

# IMPORTANT: Replace placeholders above with your actual values:
# - YOUR_SERVICE_URL: Your Cloud Run service URL (e.g., https://boomi-mcp-server-xxx.run.app)
# - YOUR_CLIENT_ID: OAuth 2.0 Client ID from your IdP
# - YOUR_CLIENT_SECRET: OAuth 2.0 Client Secret from your IdP

# RECOMMENDED: Use GCP Secret Manager instead of hardcoding secrets
# See DEPLOYMENT-NOTES.md for instructions on using Secret Manager
